<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StockbitButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StockbitButton.NoCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StockbitButton.NoCaps.BlackText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StockbitButton.NoCaps.GreenText">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="StockbitButton.NoCaps.GreyText">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="StockbitButton.NoCaps.GreenText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StockbitMaterialButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="StockbitMaterialButton.Bordered">
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="StockbitMaterialButton.Bordered.NoCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StockbitMaterialButton.NoCaps">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StockbitMaterialButton.NoCaps.WhiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StockbitMaterialButton.NoCaps.GreenText">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="StockbitMaterialButton.Bordered.NoCaps.GreenText">
        <item name="android:textColor">@color/green</item>
    </style>
</resources>